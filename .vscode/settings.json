{
  // Enable the ESlint flat config support
  "eslint.experimental.useFlatConfig": true,

  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "unocss.root": "packages/client",

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off" },
    { "rule": "*-indent", "severity": "off" },
    { "rule": "*-spacing", "severity": "off" },
    { "rule": "*-spaces", "severity": "off" },
    { "rule": "*-order", "severity": "off" },
    { "rule": "*-dangle", "severity": "off" },
    { "rule": "*-newline", "severity": "off" },
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" }
  ],

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ],

  "i18n-ally.localesPaths": [
    "packages/locales",
    "apps/basis-manage/src/locales",
    "apps/organization-manage/src/locales",
    "apps/r2-remote-assistance/src/locales",
    "apps/system-manage/src/locales",
    "apps/basis-manage/src/locales/lang",
    "apps/organization-manage/src/locales/lang",
    "apps/r2-remote-assistance/src/locales/lang",
    "apps/system-manage/src/locales/lang"
  ],
  "cSpell.words": [
    "antfu",
    "Attributify",
    "automator",
    "autoscan",
    "camelcase",
    "catchtouchmove",
    "chooseavatar",
    "conponents",
    "dcloudio",
    "easycom",
    "getphonenumber",
    "getuserinfo",
    "iconfont",
    "konbai",
    "kuaishou",
    "quickapp",
    "stacktracey",
    "stylelint",
    "toutiao",
    "uniapp",
    "unocss",
    "vubc",
    "weapp",
    "weixin"
  ]
}
